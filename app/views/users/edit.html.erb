<div class="container mt-3">
  <div class="row">
    <div class="mx-auto">
    <h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <div>
    <label for="inputName">Name</label><br>
    <%= f.text_field :name, autofocus: true, id:"inputName", style: "width:50%" %>
  </div>
  <div class="mt-3">
    <label for="inputImage">Image</label><br>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>
  <div class="mt-3">
    <label for="inputIntroduction">Introduction</label><br>
    <%= f.text_area :introduction, placeholder: "" %>
  </div>
  <%= f.submit "Update User", class: "btn btn-secondary" %>
<% end %>
    </div>
  </div>
</div>