<div>
  <% flash.each do |message_type, message| %>
    <%= content_tag :div, message, class: message_type %>
  <% end %>
</div>

<div class="mx-auto pt-4">
  <h1>welcome to <i class="fa-solid fa-book"></i>Bookers !!</h1>
  <p>In <i class="fa-solid fa-book"></i><strong>Bookers</strong>,</p>
  <p>you can share and exchange your opinions , inpressions , and emotions</p>
  <p>about various books!</p>
</div>

  <% if user_signed_in? %>
    <div class="row-gap-3 text-center">
      <div class="p-2 g-col-6"><button class="btn btn-primary btn-info w-25"><%= link_to "Log in", user_path(@user.id), class: "text-white" %></button></div>
      <div class="p-2 g-col-6"><button class="btn btn-primary btn-success w-25"><%= link_to "Sign up", user_path(@user.id), class: "text-white" %></button></div>
    </div>
  <% else %>
    <div class="d-grid gap-2 text-center">
      <div class="p-2 g-col-6"><button class="btn btn-primary w-50"><%= link_to "Log in", new_user_session_path %></button></div>
      <div class="p-2 g-col-6"><button class="btn btn-primary w-50"><%= link_to "Sign up", new_user_registration_path %></button></div>
    </div>
  <% end %>
  
<p class="mx-auto pt-5">CopyRight Infratop.inc</p>
